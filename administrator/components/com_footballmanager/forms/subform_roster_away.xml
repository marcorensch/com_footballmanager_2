<?xml version="1.0" encoding="UTF-8"?>
<!-- Repeatable Subform -->
<form
        addfieldprefix="NXD\Component\Footballmanager\Administrator\Field"
>
    <fieldset name="playerselect" class="col-lg-4">
        <field
                name="player"
                type="DynamicPlayers"
                label="Player"
                class="roster-player-select away"
                reference="away"
                layout="joomla.form.field.list-fancy-select"
        />
    </fieldset>
   <fieldset name="playerposition" class="col-lg-4">
       <field
               name="position"
               type="Positions"
               label="Position"
               context="player"
               class="player-position"
               layout="joomla.form.field.list-fancy-select"
       />
   </fieldset>
    <fieldset name="playernumber" class="col-lg-4">
        <field
                name="number"
                type="text"
                label="Number"
                class="player-number"
        />
    </fieldset>

</form>