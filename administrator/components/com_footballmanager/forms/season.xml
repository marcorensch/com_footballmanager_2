<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
            addruleprefix="NXD\Component\Footballmanager\Administrator\Rule"
            addfieldprefix="NXD\Component\Footballmanager\Administrator\Field"
    >
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                class="readonly hidden"
                hidden="true"
                readonly="true"
        />

        <field
                name="title"
                type="text"
                validate=""
                class=""
                label="COM_FOOTBALLMANAGER_FIELD_NAME_LABEL"
                size="40"
                required="true"
        />

        <field
                name="alias"
                type="text"
                label="JFIELD_ALIAS_LABEL"
                size="45"
                hint="JFIELD_ALIAS_PLACEHOLDER"
        />

        <field
                name="created_by"
                type="user"
                label="COM_FOOTBALLMANAGER_CREATED_BY_LABEL"
                readonly="true"
                class="readonly"
        />
        <field
                name="created_at"
                type="calendar"
                label="COM_FOOTBALLMANAGER_CREATED_AT_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
                readonly="true"
                default="now"
        />

        <field
                name="modified_by"
                type="user"
                label="COM_FOOTBALLMANAGER_MODIFIED_BY_LABEL"
                readonly="true"
                class="readonly"
        />

        <field
                name="ordering"
                type="ordering"
                label="JFIELD_ORDERING_LABEL"
                content_type="com_footballmanager.location"
        />
        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                size="1"
        />

        <field name="params" type="textarea" label="params" description="params" />

    </fieldset>
</form>
